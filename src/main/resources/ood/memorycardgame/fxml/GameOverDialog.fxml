<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane prefWidth="300" prefHeight="300" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ood.memorycardgame.GameOverDialogController">
    <headerText>
        Game Over
    </headerText>
    <content>
        <VBox spacing="10" alignment="CENTER">
            <Label fx:id="winnerLabel" />
            <Label fx:id="scoreLabel" />
            <Button fx:id="playAgainButton" text="Play Again" onAction="#handlePlayAgain" />
            <Button fx:id="backToMenuButton" text="Back to Menu" onAction="#handleBackToMenu" />
            <Button fx:id="exitButton" text="Exit" onAction="#handleExit" />
        </VBox>
    </content>
</DialogPane>
